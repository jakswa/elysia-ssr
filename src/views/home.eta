<% layout('./layouts/main', { title: 'Home' }) %>

<div class="bg-white overflow-hidden shadow rounded-lg">
  <div class="px-4 py-5 sm:p-6">
    <h1 class="text-3xl font-bold text-gray-900 mb-4">Welcome to Elysia SSR</h1>
    <p class="text-lg text-gray-700 mb-6">
      A modern TypeScript server-side rendering starter with Elysia, Eta templates, and JWT authentication.
    </p>
    
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mt-8">
      <div class="border border-gray-200 rounded-lg p-6">
        <h2 class="text-xl font-semibold text-gray-900 mb-2">🚀 Fast & Type-Safe</h2>
        <p class="text-gray-600">Built with Bun and Elysia for blazing fast performance with full TypeScript support.</p>
      </div>
      
      <div class="border border-gray-200 rounded-lg p-6">
        <h2 class="text-xl font-semibold text-gray-900 mb-2">🔐 Secure Auth</h2>
        <p class="text-gray-600">JWT-based authentication with secure HTTP-only cookies built in.</p>
      </div>
      
      <div class="border border-gray-200 rounded-lg p-6">
        <h2 class="text-xl font-semibold text-gray-900 mb-2">📄 Server-Side Rendering</h2>
        <p class="text-gray-600">Traditional SSR with Eta templates for SEO-friendly, fast-loading pages.</p>
      </div>
    </div>
    
    <% if (!it.user) { %>
      <div class="mt-8 flex gap-4">
        <a href="/register" class="bg-indigo-600 text-white px-6 py-3 rounded-md font-medium hover:bg-indigo-700 transition-colors">
          Get Started
        </a>
        <a href="/login" class="bg-gray-200 text-gray-700 px-6 py-3 rounded-md font-medium hover:bg-gray-300 transition-colors">
          Sign In
        </a>
      </div>
    <% } %>
  </div>
</div>
