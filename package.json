{
  "name": "elysia-ssr",
  "version": "1.0.0",
  "scripts": {
    "dev": "bun run start:watch & bun run css:watch",
    "build": "bun build --minify --target bun --outdir build src/index.ts",
    "start": "bun run src/index.ts",
    "start:watch": "bun run --watch src/index.ts",
    "typecheck": "tsc --noEmit",
    "test": "bun test",
    "db:migrate": "prisma migrate dev",
    "db:reset": "prisma migrate reset --force",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "lint": "bunx biome lint ./src",
    "format": "bunx biome format --write ./src",
    "css:build": "bunx @tailwindcss/cli -i ./src/styles/main.css -o ./public/styles.css",
    "css:watch": "bunx @tailwindcss/cli -i ./src/styles/main.css -o ./public/styles.css --watch"
  },
  "bun-create": {
    "start": "bun db:push && bun dev",
    "postinstall": "bun run src/tasks/postinstall.js"
  },
  "dependencies": {
    "@elysiajs/cookie": "^0.8.0",
    "@elysiajs/jwt": "^1.3.2",
    "@elysiajs/static": "^1.3.0",
    "@prisma/client": "^6.13.0",
    "@tailwindcss/cli": "^4.1.11",
    "bcryptjs": "^3.0.2",
    "elysia": "latest",
    "eta": "^3.5.0",
    "pino": "^9.7.0",
    "tailwindcss": "^4.1.11"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.1.3",
    "@types/bcryptjs": "^3.0.0",
    "@types/bun": "^1.2.19",
    "bun-types": "latest",
    "pino-pretty": "^13.1.1",
    "prisma": "^6.13.0",
    "typescript": "^5.7.3"
  }
}